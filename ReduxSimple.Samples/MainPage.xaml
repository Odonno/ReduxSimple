<Page
    x:Class="ReduxSimple.Samples.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="GoToCounterButton">Counter</Button>
            <Button x:Name="GoToTicTacToeButton">Tic tac Toe</Button>
            <Button x:Name="GoToTodoListButton">Todo List</Button>
            <Button x:Name="GoToPokedexButton">Pokedex</Button>
        </StackPanel>
    </Grid>
</Page>
